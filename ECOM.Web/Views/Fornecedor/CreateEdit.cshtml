@model ECOM.Web.ViewModels.FornecedorViewModels
@{
    ViewBag.Title = Model.Id == 0 ? "Create" : "Edit";
}
<div class="row wrapper border-bottom white-bg page-heading animated fadeInDown">
    <div class="col-sm-4">
        <h2>@ViewBag.Title </h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>

@using (Ajax.BeginForm("CreateEdit", "Fornecedor", new AjaxOptions
{
    OnSuccess = "OFrame.Ecom.Form.Success(data, this)",
}, new { id = "form-business", role = "form", title = ViewBag.Title, urlBack = Url.Action("Index") }))
{
    <div class="wrapper wrapper-content animated fadeInDown">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5><i class="fa fa-pencil-square-o"></i> @ViewBag.Title</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="fullscreen-link">
                                <i class="fa fa-expand"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-bars"></i>
                            </a>

                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-sm-4 has-warning">
                                <div class="form-group">
                                    <label>@Html.LabelFor(model => model.RazaoSocial, new { @class = "font-normal" })</label>
                                    @Html.TextBoxFor(model => model.RazaoSocial, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.RazaoSocial)
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group has-warning">
                                    <label>@Html.LabelFor(model => model.Nomefantasia, new { @class = "font-normal" })</label>
                                    @Html.TextBoxFor(model => model.Nomefantasia, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Nomefantasia)
                                </div>
                            </div>
                            <div class="col-sm-4 has-warning">
                                <div class="form-group">
                                    <label>@Html.LabelFor(model => model.CNPJ, new { @class = "font-normal" })</label>
                                    @Html.TextBoxFor(model => model.CNPJ, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.CNPJ)
                                </div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-sm-4 has-warning">
                                <div class="form-group">
                                    <label>@Html.LabelFor(model => model.Telefone, new { @class = "font-normal" })</label>
                                    @Html.TextBoxFor(model => model.Telefone, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Telefone)
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group has-warning">
                                    <label>@Html.LabelFor(model => model.Celular, new { @class = "font-normal" })</label>
                                    @Html.TextBoxFor(model => model.Celular, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Celular)
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group has-warning">
                                    <label>@Html.LabelFor(model => model.EnderecoComercial, new { @class = "font-normal" })</label>
                                    @Html.TextBoxFor(model => model.EnderecoComercial, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.EnderecoComercial)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label>@Html.Label("Produtos associados", new { @class = "font-normal" })</label>
                                    @if (Model.Id != 0)
                                    {
                                        @Html.DropDownList("produtosList", (IEnumerable<SelectListItem>)ViewBag.Produtos, new { id = "drop-produto", @class = "form-control", multiple = "multiple" })
                                    }
                                    else
                                    {
                                        <select id="drop-produto"> <option></option> </select>
                                    }
                                    </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <button class="btn btn-success" type="submit" accesskey="s">
                                    <i class="fa fa-save"></i>
                                    <span class="bold">SALVAR</span>
                                </button>
                                <button class="btn btn-outline btn-danger" accesskey="c" type="button" onclick="location.href='@Url.Action("Index", "Fornecedor")'">
                                    <span class="bold">CANCELAR</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<script type="text/javascript">

    $(document).ready(function () {
        loadItens();
        $('.i-checks').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
        });

    });


    function loadItens() {
        $('#drop-produto').select2({ width: '100%' });
        var valores = document.getElementById('drop-produto').options.length;
        var arr = [];
        for (var i = 1; i <= valores; i++) {
            arr.push(i.toString());
        }
        $('#drop-produto').val(arr).trigger('change');
        $('#drop-produto').trigger('change');
    }

</script>