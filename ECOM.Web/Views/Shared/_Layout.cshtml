<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>ECOM | @ViewBag.Title</title>

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>
    <!-- Add local styles, mostly for plugins css file -->
    @if (IsSectionDefined("Styles"))
    {@RenderSection("Styles", required: false)}

    <!-- Add jQuery Style direct - used for jQGrid plugin -->
    <link href="@Url.Content("~/Scripts/plugins/jquery-ui/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <!-- Primary Inspinia style -->
    @Styles.Render("~/Content/css")
    @Styles.Render("~/font-awesome/css")
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/sweetAlertStyles")
    @Styles.Render("~/plugins/clippyStyle")
    @Styles.Render("~/plugins/toastrStyle")
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
    @Styles.Render("~/plugins/laddaStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
    @Styles.Render("~/plugins/clockpickerStyles")
    @Styles.Render("~/plugins/tourStyles")
    @Styles.Render("~/plugins/select2Styles")
    @Styles.Render("~/plugins/summernoteStyles")
    @Styles.Render("~/plugins/c3Styles")
    @Styles.Render("~/plugins/morrisStyles")

    @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript">
        $(window).load(function () {
            $("#splashscreen").fadeOut("slow"); 
        })
    </script>
</head>
<body>

    <!-- Skin configuration box-->

    <div id="splashscreen"></div>
    <div id="wrapper" class="">

        @Html.Partial("_Navigation")

        <div id="page-wrapper" class="gray-bg @ViewBag.SpecialClass">

            @Html.Partial("_TopNavbar")

            <div class="body-content">
                @RenderBody()
            </div>

            @Html.Partial("_Footer")
        </div>
        @Html.Partial("_RightSidebar")
    </div>

    @Scripts.Render("~/plugins/validate")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/slimScroll")
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/plugins/clockpicker")
    @Scripts.Render("~/bundles/inspinia")
    @Scripts.Render("~/bundles/dnd")
    @Scripts.Render("~/plugins/iCheck")
    @Scripts.Render("~/plugins/sweetAlert")
    @Scripts.Render("~/plugins/toastr")
    @Scripts.Render("~/plugins/clippy")
    @Scripts.Render("~/bundles/jquerymask")
    <!-- ECOM Framework -->
    @Scripts.Render("~/bundles/ECOM.Framework")

    @Scripts.Render("~/bundles/skinConfig")
    @Scripts.Render("~/Scripts/ScrollTop")
    @Scripts.Render("~/plugins/ladda")
    @Scripts.Render("~/plugins/tour")
    @Scripts.Render("~/plugins/select2")
    @Scripts.Render("~/plugins/summernote")
    @Scripts.Render("~/plugins/d3")
    @Scripts.Render("~/plugins/c3")
    @Scripts.Render("~/plugins/morris")
    @Scripts.Render("~/bundles/filestyle")
   <!--   <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script> -->
    <!--Reference the autogenerated SignalR hub script. -->
    <!-- <script src="~/signalr/hubs"></script> -->

    @RenderSection("scripts", required: false)

    <script type="text/javascript">

        OFrame.ECOM.RootSite = "@Url.Content("~/")";
        OFrame.ECOM.Mobile = "@(Request.QueryString["mobile"] == "1")" == "True";
        OFrame.ECOM.Init();

    </script>
</body>
</html>
